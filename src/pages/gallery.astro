---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro"; // 根据您的项目结构调整路径

const albums = await getCollection("albums");
---

<Layout title="照片画廊">
  <main class="mx-auto max-w-6xl px-4 py-12">
    <h1 class="text-4xl font-bold text-center mb-10">照片画廊</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        albums.map((item) => (
          <a
            href={`/gallery/${item.id}`}
            class="group block overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300"
          >
            <div class="aspect-video overflow-hidden">
              <Image
                src={item.data.cover}
                alt={item.data.title}
                width={600}
                height={300}
                class="rounded mb-4 border border-transparent hover:border-gray-300 transition-all duration-300 ease-in-out hover:shadow-lg"
            loading="lazy"
              />
            </div>
            <div class="p-4">
              <h2 class="text-xl font-semibold">{item.data.title}</h2>
              {item.data.description && (
                <p class="text-gray-600 mt-2">{item.data.description}</p>
              )}
            </div>
          </a>
        ))
      }
    </div>
  </main>
</Layout>